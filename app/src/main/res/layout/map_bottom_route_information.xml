<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/ic_toggle_temp_on"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageButton
        android:id="@+id/fab_temperature"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        app:srcCompat="@drawable/ic_toggle_temp_on"
        tools:layout_conversion_absoluteHeight="40dp"
        tools:layout_conversion_absoluteWidth="40dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="40dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageButton
        android:id="@+id/fab_no_name_yet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_toggle_temp_on"
        tools:layout_conversion_absoluteHeight="40dp"
        tools:layout_conversion_absoluteWidth="40dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_route"
        app:backgroundTint="@color/colorAccent"
        app:srcCompat="@mipmap/icon_add"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="82dp"
        tools:layout_conversion_absoluteWidth="70dp"
        tools:layout_conversion_absoluteHeight="70dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/gridLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:layout_rowSpan="4"
            app:srcCompat="@mipmap/logo"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="2"
            app:srcCompat="@drawable/ic_toggle_temp_on"/>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="3"
            app:srcCompat="@drawable/ic_toggle_temp_on"/>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-30dp"/>


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="4"
            app:srcCompat="@drawable/ic_toggle_temp_on"/>

        <Button
            android:id="@+id/route_current_location_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:background="@null"
            android:textAllCaps="false"
            android:layout_row="2"
            android:gravity="center_vertical"
            android:text="Su ubicación"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/route_firestation_location_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="No se encontraron bomberos"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/route_water_location_button"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:layout_row="4"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="No se encontraron recursos hídricos"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </GridLayout>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkGray"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/linearLayout2"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="0dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:layout_rowSpan="3"
            app:srcCompat="@drawable/ic_toggle_temp_on"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_marginBottom="20dp"
            android:layout_row="1"
            android:text="Desde"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/wildfire_location_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:text="Bagaces, Guanacaste, CR"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wildfire_coordinates_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:layout_row="3"
            android:text="37.3382° N, 121.8863° W"
            android:textColor="@android:color/white" />
    </GridLayout>


</android.support.constraint.ConstraintLayout>