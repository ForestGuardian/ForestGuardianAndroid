<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ForestGuardianActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.50</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ForestGuardianActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/ForestGuardianActionBarTitle</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ForestGuardianActionBar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorBackground">@color/colorDarkGrayTranslucent</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="actionBarStyle">@style/ForestGuardianActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="BaseAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/colorDarkGrayBackground</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
